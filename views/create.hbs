<div class="container">
  <h2>Dodaj nowy obraz</h2>
  <form action="../pictures/create" method="post" class="p-3 mb-2 bg-white rounded">
    <div class="form-group">
      <label for="nazwa">Nazwa:</label>
      <input type="text" class="form-control" id="nazwa" name="nazwa" required>
    </div>
    <div class="form-group">
      <label for="rozmiar">Rozmiar:</label>
      <input type="number" class="form-control" id="rozmiar" name="rozmiar" required>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
  </form>
</div>
